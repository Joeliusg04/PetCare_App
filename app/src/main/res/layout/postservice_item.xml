<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/sec1"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.90"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"

        />

    <TextView
        android:id="@+id/title_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        android:text="Titulo de ejemplo"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/image_item"
        app:layout_constraintTop_toTopOf="@id/image_item"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        />

    <Button
        android:id="@+id/check_button"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/check"
        android:textColor="@color/white"
        android:backgroundTint="@color/principal"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_item"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:textSize="10dp"
        android:text="ELIMINAR"
        android:textColor="@color/white"
        android:backgroundTint="@color/principal"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@id/check_button"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:textSize="10dp"
        android:text="EDITAR"
        android:textColor="@color/white"
        android:backgroundTint="@color/principal"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toEndOf="@id/check_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>